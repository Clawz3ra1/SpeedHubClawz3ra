-- Script para criar a UI de carregamento e depois a UI de ajuste de velocidade

-- Referências para o jogador e a tela
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Criar a UI de carregamento
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Frame de carregamento
local loadingFrame = Instance.new("Frame")
loadingFrame.Size = UDim2.new(0, 300, 0, 150)
loadingFrame.Position = UDim2.new(0.5, -150, 0.5, -75)
loadingFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
loadingFrame.Parent = screenGui

local loadingLabel = Instance.new("TextLabel")
loadingLabel.Size = UDim2.new(1, 0, 1, 0)
loadingLabel.Text = "Carregando..."
loadingLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingLabel.TextSize = 24
loadingLabel.BackgroundTransparency = 1
loadingLabel.Parent = loadingFrame

-- Criar a UI de ajuste de velocidade
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150)
frame.Position = UDim2.new(0.5, -150, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Parent = screenGui
frame.Visible = false  -- Inicialmente invisível

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "Ajuste de Velocidade"
title.TextColor3 = Color3.fromRGB(255, 0, 0)
title.TextSize = 20
title.BackgroundTransparency = 1
title.Parent = frame

local speedInput = Instance.new("TextBox")
speedInput.Size = UDim2.new(0.8, 0, 0, 40)
speedInput.Position = UDim2.new(0.1, 0, 0.3, 0)
speedInput.PlaceholderText = "Digite a velocidade (ex: 100)"
speedInput.TextColor3 = Color3.fromRGB(255, 255, 255)
speedInput.BackgroundColor3 = Color3.fromRGB(0, 122, 255)
speedInput.Parent = frame

local setButton = Instance.new("TextButton")
setButton.Size = UDim2.new(0.8, 0, 0, 40)
setButton.Position = UDim2.new(0.1, 0, 0.6, 0)
setButton.Text = "Definir Velocidade"
setButton.TextColor3 = Color3.fromRGB(255, 255, 255)
setButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
setButton.Parent = frame

-- Função para mudar a velocidade do jogador
local function setSpeed(speed)
    if tonumber(speed) then
        local speedValue = tonumber(speed)
        if player and player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.WalkSpeed = speedValue
        end
    else
        print("Valor inválido!")
    end
end

-- Função para quando o jogador clicar no botão
setButton.MouseButton1Click:Connect(function()
    setSpeed(speedInput.Text)
end)

-- Tornar a UI móvel
local dragging, dragInput, dragStart, startPos

-- Função para começar o arraste
frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

-- Função para arrastar a UI
frame.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Esperar 3 segundos e então ocultar a UI de carregamento e mostrar a UI de ajuste de velocidade
wait(3)

-- Esconder a UI de carregamento
loadingFrame.Visible = false

-- Mostrar a UI de ajuste de velocidade
frame.Visible = true

-- Script para criar a UI de carregamento com bolinhas girando e depois a UI de ajuste de velocidade

-- Referências para o jogador e a tela
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Criar a UI de carregamento
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Frame de carregamento com opacidade 0.4
local loadingFrame = Instance.new("Frame")
loadingFrame.Size = UDim2.new(0, 300, 0, 150)
loadingFrame.Position = UDim2.new(0.5, -150, 0.5, -75)
loadingFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
loadingFrame.BackgroundTransparency = 0.6  -- Definindo opacidade para 0.4 (100% - 0.6 = 40%)
loadingFrame.Parent = screenGui

local loadingLabel = Instance.new("TextLabel")
loadingLabel.Size = UDim2.new(1, 0, 0.3, 0)
loadingLabel.Text = "Carregando..."
loadingLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingLabel.TextSize = 24
loadingLabel.BackgroundTransparency = 1
loadingLabel.Parent = loadingFrame

-- Criar a animação de bolinhas girando
local dotFrame = Instance.new("Frame")
dotFrame.Size = UDim2.new(0, 100, 0, 20)
dotFrame.Position = UDim2.new(0.5, -50, 0.7, 0)
dotFrame.BackgroundTransparency = 1
dotFrame.Parent = loadingFrame

-- Centralizando as bolinhas
local dot1 = Instance.new("TextLabel")
dot1.Size = UDim2.new(0, 20, 0, 20)
dot1.Position = UDim2.new(0, 0, 0, 0)
dot1.Text = "."
dot1.TextColor3 = Color3.fromRGB(255, 255, 255)  -- Cor branca
dot1.TextSize = 30
dot1.BackgroundTransparency = 1
dot1.Parent = dotFrame

local dot2 = Instance.new("TextLabel")
dot2.Size = UDim2.new(0, 20, 0, 20)
dot2.Position = UDim2.new(0.5, -10, 0, 0)  -- Ajustei para centralizar mais
dot2.Text = "."
dot2.TextColor3 = Color3.fromRGB(255, 255, 255)  -- Cor branca
dot2.TextSize = 30
dot2.BackgroundTransparency = 1
dot2.Parent = dotFrame

local dot3 = Instance.new("TextLabel")
dot3.Size = UDim2.new(0, 20, 0, 20)
dot3.Position = UDim2.new(1, -20, 0, 0)  -- Ajustei para centralizar mais
dot3.Text = "."
dot3.TextColor3 = Color3.fromRGB(255, 255, 255)  -- Cor branca
dot3.TextSize = 30
dot3.BackgroundTransparency = 1
dot3.Parent = dotFrame

-- Animação de rotação das bolinhas
local function animateDots()
    local tweenService = game:GetService("TweenService")

    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true)
    local goal = {Rotation = 360}

    local tween1 = tweenService:Create(dot1, tweenInfo, goal)
    local tween2 = tweenService:Create(dot2, tweenInfo, goal)
    local tween3 = tweenService:Create(dot3, tweenInfo, goal)

    tween1:Play()
    tween2:Play()
    tween3:Play()
end

animateDots()  -- Iniciar a animação

-- Criar a UI de ajuste de velocidade
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150)
frame.Position = UDim2.new(0.5, -150, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Parent = screenGui
frame.Visible = false  -- Inicialmente invisível

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "Ajuste de Velocidade"
title.TextColor3 = Color3.fromRGB(255, 0, 0)
title.TextSize = 20
title.BackgroundTransparency = 1
title.Parent = frame

local speedInput = Instance.new("TextBox")
speedInput.Size = UDim2.new(0.8, 0, 0, 40)
speedInput.Position = UDim2.new(0.1, 0, 0.3, 0)
speedInput.PlaceholderText = "Digite a velocidade (ex: 100)"
speedInput.TextColor3 = Color3.fromRGB(255, 255, 255)
speedInput.BackgroundColor3 = Color3.fromRGB(0, 122, 255)
speedInput.Parent = frame

local setButton = Instance.new("TextButton")
setButton.Size = UDim2.new(0.8, 0, 0, 40)
setButton.Position = UDim2.new(0.1, 0, 0.6, 0)
setButton.Text = "Definir Velocidade"
setButton.TextColor3 = Color3.fromRGB(255, 255, 255)
setButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
setButton.Parent = frame

-- Criar o botão de "X" para fechar a UI de ajuste de velocidade
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(0, 0, 0, 0)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.TextSize = 20
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeButton.BackgroundTransparency = 0.3
closeButton.Parent = frame

-- Função para mudar a velocidade do jogador
local function setSpeed(speed)
    if tonumber(speed) then
        local speedValue = tonumber(speed)
        if player and player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.WalkSpeed = speedValue
        end
    else
        print("Valor inválido!")
    end
end

-- Função para quando o jogador clicar no botão
setButton.MouseButton1Click:Connect(function()
    setSpeed(speedInput.Text)
end)

-- Função para quando o jogador clicar no "X" para fechar a UI
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()  -- Destruir a UI ao clicar no "X"
end)

-- Tornar a UI móvel
local dragging, dragInput, dragStart, startPos

-- Função para começar o arraste
frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

-- Função para arrastar a UI
frame.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Esperar 3 segundos e então ocultar a UI de carregamento e mostrar a UI de ajuste de velocidade
wait(3)

-- Esconder a UI de carregamento
loadingFrame.Visible = false

-- Mostrar a UI de ajuste de velocidade
frame.Visible = true
